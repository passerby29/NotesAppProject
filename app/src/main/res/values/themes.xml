<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_color_main2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_color_main2</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBar</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/statusBar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">@color/item_chip_background</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/statusBar</item>
        <item name="colorSecondary">@color/text_color_main2</item>
        <item name="colorSurface">@color/main_background</item>
        <item name="colorOnSurface">@color/text_color_main2</item>
        <item name="colorOnSurfaceVariant">@color/text_color_main2</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_main2</item>
    </style>

    <style name="SearchEditTextStyle" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense">
        <item name="android:hint">@string/et_search_hint</item>
        <item name="singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textColorHint">@color/text_color_main</item>
        <item name="android:textCursorDrawable">@drawable/item_cursor_et2</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="IconButtonStyle">
        <item name="android:minWidth">@dimen/m3_btn_icon_only_min_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">@dimen/m3_btn_inset</item>
        <item name="android:insetRight">@dimen/m3_btn_inset</item>
        <item name="iconSize">@dimen/m3_btn_icon_only_default_size</item>
        <item name="iconTint">@color/m3_icon_button_icon_color_selector</item>
        <item name="iconPadding">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.IconButton</item>
    </style>

    <style name="iconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">25dp</item>
    </style>

    <style name="DisabledIconButtonStyle">
        <item name="android:minWidth">@dimen/m3_btn_icon_only_min_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">@dimen/m3_btn_inset</item>
        <item name="android:insetRight">@dimen/m3_btn_inset</item>
        <item name="iconSize">@dimen/m3_btn_icon_only_default_size</item>
        <item name="iconPadding">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.IconButton</item>
    </style>

    <style name="dividerStyle">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="settingsButtonStyle">
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/montserrat_alternates_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_color_main2</item>
        <item name="android:textSize">12sp</item>
        <item name="drawableTint">@color/text_color_main2</item>
        <item name="elevation">2dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="DialogAlert">
        <item name="materialAlertDialogTitlePanelStyle">
            @style/MaterialAlertDialog.Material3.Title.Panel.CenterStacked
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/MaterialAlertDialog.Material3.Title.Icon.CenterStacked
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.Material3.Title.Text.CenterStacked
        </item>
        <item name="colorPrimary">@color/text_color_main2</item>
        <item name="tint">@color/text_color_main2</item>
        <item name="colorSurface">@color/main_background</item>
        <item name="colorOnSurface">@color/text_color_main2</item>
        <item name="colorOnSurfaceVariant">@color/text_color_main2</item>
    </style>
</resources>