<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/statusBar"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notes_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates_semi_bold"
                android:singleLine="true"
                android:textColor="#393939"
                android:textSize="16sp"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/notes_bookmark_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_bookmark_filled"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/notes_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:singleLine="true"
            android:textColor="#393939"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/notes_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_alternates_light"
            android:singleLine="true"
            android:textColor="#393939"
            android:textSize="12sp"
            tools:text="29 ноября" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notes_category_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_alternates_light"
            android:singleLine="true"
            android:textColor="#393939"
            android:textSize="12sp"
            android:layout_gravity="bottom"
            tools:text="Work notes" />

            <ImageView
                android:id="@+id/notes_checkbox_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="visible"
                android:src="@drawable/checkbox_selector"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>