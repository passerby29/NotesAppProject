<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialog_email_et"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="Email"
        android:background="@drawable/item_edittext_style2"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="8dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailSubject"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:singleLine="true"
        android:textColor="@color/text_color_main"
        android:textColorHint="@color/text_color_add"
        android:textCursorDrawable="@drawable/item_cursor_et"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/dialog_message_et"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="Email"
        android:background="@drawable/item_edittext_style2"
        android:gravity="top"
        android:hint="@string/email_message_hint"
        android:inputType="textMultiLine"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:textColor="@color/text_color_main"
        android:textColorHint="@color/text_color_add"
        android:textCursorDrawable="@drawable/item_cursor_et"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_email_et"
        tools:ignore="LabelFor,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>